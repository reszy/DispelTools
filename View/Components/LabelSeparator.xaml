<UserControl x:Class="View.Components.LabelSeparator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:View.Components"
             mc:Ignorable="d" 
             d:DesignWidth="200">
    <Grid Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
        <Border VerticalAlignment="Center" HorizontalAlignment="Stretch" Height="1" BorderThickness="1" BorderBrush="Black" Background="Black"/>
        <Label x:Name="Label" VerticalAlignment="Center" HorizontalAlignment="Center" d:Content="Label" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"/>
    </Grid>
</UserControl>
