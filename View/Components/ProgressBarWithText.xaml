<UserControl x:Class="View.Components.ProgressBarWithText"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:View.Components"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="800">

    <Border x:Name="Border" BorderThickness="1" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}">
        <Grid>
            <Rectangle x:Name="ProgressBar" Fill="#FF00C000" d:Width="106" HorizontalAlignment="Left"/>
            <Label x:Name="Label" d:Content="Some longer text for testing design" Margin="5 0" VerticalContentAlignment="Center"/>
        </Grid>
    </Border>
</UserControl>
