                <Label x:Name="HeaderLabel" Padding="0" Margin="10 1">Header</Label>
                <Polygon DockPanel.Dock="Right" Points="0,0 10,0 5,10" Fill="Black" Margin="10 5" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5">
